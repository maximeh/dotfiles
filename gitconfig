[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = 1
[gc]
	auto=1
[merge]
	summary=true
[alias]
	news = log -p HEAD@{1}..HEAD@{0}
	unstage = reset HEAD
	uncommit = reset --soft HEAD^
	count = shortlog -sn
	# Find every version of every file and sort by size; help find huge file
	hugefiles = !"for commit in $(git log --all --pretty=format:%H); do git ls-tree -r -l $commit; done |awk '{print $4 \" \" $5}' |sort -nu"
	# Will rewrite history and remove file
	delfile = !"sh -c \"git filter-branch -f --index-filter 'git rm --cached --ignore-unmatch $1' -- --all\""
	# Switch to a branch, creating it if necessary
	go = checkout -B
	# Show verbose output about tags, branches or remotes
	branches = branch -a
	remotes = remote -v
	# Clone a repository including all submodules
	c = clone --recursive
	# Commit all changes
	ca = !git add -A && git commit -av
	format-patch = format-patch -M
	# Show the diff between the latest commit and the current state
	d = !"git diff-index --quiet HEAD -- || clear; git diff --patch-with-stat"
	graph = !"git log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
	rb = "!sh -c \"git rebase -i HEAD~$1\" -"
	gca = gc --aggressive --prune=now
	s = !"git status -sb"
	# stash shortcuts
	sl = stash list
	sa = stash apply
	ss = stash save
	ctags = !.git/hooks/ctags
	cleanup = !"rm -rf .git/refs/original/; git reflog expire --expire=now --all; git fsck --full --unreachable;  git repack -A -d; git gca"
[help]
	autocorrect = 1
[user]
	name = Maxime Hadjinlian
	email = maxime.hadjinlian@gmail.com
[push]
	default = simple
[sendemail]
	smtpserver = /usr/bin/msmtp
[branch]
	autosetuprebase = always
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
[init]
	templatedir = ~/.git_template
[apply]
	whitespace = warn
