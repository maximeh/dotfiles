#!/bin/sh

filename="${1:-capture.mkv}"
resolution="${2:-2880x1800}"

ffmpeg -f alsa \
        -i plughw \
        -acodec flac \
        -f x11grab \
        -r 30 -s "$resolution" \
        -i "$DISPLAY" \
        -vcodec libx264 \
        -preset ultrafast \
        -crf 0 \
        "$filename"

