# Images
image/jpg; ~/.mutt/view_attachment %s jpg
image/jpeg; ~/.mutt/view_attachment %s jpg
image/pjpeg; ~/.mutt/view_attachment %s jpg
image/png; ~/.mutt/view_attachment %s png
image/gif; ~/.mutt/view_attachment %s gif

# PDFs
application/pdf; ~/.mutt/view_attachment %s pdf

# HTML
text/html; ~/.mutt/view_attachment %s html

# Unidentified files
application/octet-stream; ~/.mutt/view_attachment %s "-"
